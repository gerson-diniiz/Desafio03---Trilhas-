<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Login Simples</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f0f0f0;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .container {
      background: white;
      padding: 30px;
      border-radius: 12px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
      width: 300px;
    }

    h2 {
      text-align: center;
    }

    input {
      width: 100%;
      padding: 10px;
      margin: 10px 0;
      font-size: 16px;
    }

    button {
      width: 100%;
      padding: 10px;
      background-color: #007bff;
      color: white;
      border: none;
      font-size: 16px;
      border-radius: 8px;
      cursor: pointer;
    }

    .mensagem {
      margin-top: 15px;
      font-weight: bold;
      text-align: center;
    }
  </style>
</head>
<body>

  <div class="container">
    <h2>Login</h2>
    <input type="text" id="idUsuario" placeholder="ID do Usuário">
    <input type="password" id="senha" placeholder="Senha">
    <button onclick="salvarDados()">Salvar</button>
    <div class="mensagem" id="mensagem"></div>
  </div>

  <script>
    function salvarDados() {
      const idUsuario = document.getElementById("idUsuario").value;
      const senha = document.getElementById("senha").value;
      const mensagem = document.getElementById("mensagem");

      if (idUsuario === "" || senha === "") {
        mensagem.textContent = "⚠️ Preencha todos os campos!";
        mensagem.style.color = "red";
        return;
      }

      // Armazenamento temporário com sessionStorage
      sessionStorage.setItem("idUsuario", idUsuario);
      sessionStorage.setItem("senha", senha);

      mensagem.textContent = "✅ Dados salvos temporariamente!";
      mensagem.style.color = "green";

      // Opcional: Limpar os campos
      document.getElementById("idUsuario").value = "";
      document.getElementById("senha").value = "";
    }
  </script>

</body>
</html>
